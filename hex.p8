--utils

function hex2pix(x,y)
	return x*8+(y%2)*4,y*6
end
-->8
--draw

function draw_hex2(x,y,fill)
	fill=fill or 0
	pal(5,fill)
	odd=y%2==1
	if(odd)then
		spr(5,x*6+3,y*5)
	else
		spr(5,x*6,y*5)	
	end
	pal()
end

function draw_hex(x,y,fill)
	fill=fill or 5
	pal(6,fill)
	local px,py=hex2pix(x,y)
	spr(2,px,py)
	pal()
end


function draw_board()
	draw_hex(2,4)
	draw_hex(3,4,3)
	draw_hex(2,5,7)
	draw_hex(3,5)
end

function draw_cursor()
	local	px,py=hex2pix(cx,cy)
	spr(1,px,py)
end
