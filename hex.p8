function _init()
	cx=0
	cy=0
	dx=0
	dy=0
	ca=0
	
	cur={
		x=0,
		y=0,
		dx=0,
		dy=0,
		ani=0
	}
	
end


function _update()
	if(btnp(⬆️)) cy-=1
	if(btnp(⬇️)) cy+=1
	if(btnp(⬅️)) cx-=1
	if(btnp(➡️)) cx+=1
end

function _draw()
	cls()
	draw_board()
	draw_cursor()
end

