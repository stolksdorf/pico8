function _update()
	if(btn(⬆️)) cy-=1
	if(btn(⬇️)) cy+=1
	if(btn(⬅️)) cx-=1
	if(btn(➡️)) cx+=1
end

function _draw()
	cls()
	draw_board()
	draw_cursor()
end

