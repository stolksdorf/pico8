function player_input()
	if(btn(⬆️)) upd_cur(cx,cy-1)
	if(btn(⬇️)) upd_cur(cx,cy+1)
	if(btn(⬅️)) upd_cur(cx-1,cy)
	if(btn(➡️)) upd_cur(cx+1,cy)
end

