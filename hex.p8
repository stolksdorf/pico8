function draw_hex(x,y,fill)
	local sprite = 1
	if(fill)then
		sprite = 2
		pal(6,fill)
	end
	local px,py=hex2pix(x,y)
	spr(sprite,px,py)
	pal()
end


size=14

function draw_board()


	draw_hex(3,4,3)
	draw_hex(2,5,7)
	for i=0,size do
		for j=0,size do
			draw_hex(i,j)	
		end	
	end
	
end

function draw_cursor()
	local	px,py=hex2pix(cx,cy)
	pal(6, 9)
	spr(1,px,py)
	pal()
end
