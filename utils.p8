function shadow_text(txt,x,y,c,s)
	c=c or 6
	s=s or 1
	print(txt,x+1,y+1,s)
	print(txt,x,y+1,s)
	print(txt,x+1,y,s)
	print(txt,x,y,c)
end

--printing logs
logs={}
function log(a,b,c)
	a,b,c=a or "",b or "", c or ""
 add(logs,a..b..c)
end
function draw_logs()
	for i,l in pairs(logs) do
		print(l,0,i*8,8)
	end
	logs={}
end
